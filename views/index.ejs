<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Word Gotchu!</title>
  <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/body.css">
  <link rel="stylesheet" href="/css/homepage.css">
  <link rel="stylesheet" href="/css/gotchuGacha.css">
</head>

<body>
  <script>
    // Get firebase database snapshot of the current user and pet
    const username = "<%= data.username %>";
    const playerCurrency = "<%= data.playerCurrency %>";
    const petLvl = "<%= pet.lvl %>";
    const petXP = "<%= pet.xp %>";
    const petStory1 = "<%= pet.lvl1Story %>";
    const petStory2 = "<%= pet.lvl2Story %>";
    const petStory3 = "<%= pet.lvl3Story %>";
    const petAbility1 = "<%= pet.lvl1Ability %>";
    const petAbility2 = "<%= pet.lvl2Ability %>";
    const petAbility3 = "<%= pet.lvl3Ability %>";

  </script>
  <!-- Manage Gotchu Page -->
  <div class="manageGotchusContainer"></div>


  <!-- Homepage -->
  <div class="mainScreenBg">
    <div class="topNav">
      <div class="userBar">
        <div class="userProfileBg"></div>
        <div class="userName"></div>
      </div>
      <div class="gotchuCoinBar">
        <div class="gotchuCoinIcon"></div>
        <div class="gotchuCoinAmount"></div>
      </div>
      <div class="settings"></div>
    </div>

    <div class="gotchuCharacter"></div>

    <div class="bottomNav">
      <div class="gotchuButton"></div>
      <div class="gachaButton"></div>
      <div class="gotchuDomeButton"></div>
    </div>
  </div>

  <!-- Gacha page -->
  <div class="gachaBg hidden">
    <div class="topNavBar">F
      <div class="homeButton">
        <h1 class="nonInteractableText">HOME</h1>
      </div>
      <div class="gotchuCoinBar">
        <div class="gotchuCoinIcon"></div>
        <div class="gotchuCoinAmount">1000</div>
      </div>
    </div>
    <div class="gachaTitle"></div>
    <div class="gachaContainer">
      <div class="gachaAnimation"></div>
    </div>
    <div class="gachaRollButton"></div>
    <div class="viewGotchusButton">
      <h3>VIEW GOTCHUS</h3>
    </div>
  </div>

  <!-- Lobby page -->
  <div class="gochuDome hidden">
    <div class="battleArenaBg">
      <div class="backButton battleMenuBackBtn">
        <span class="backButtonText">BACK</span>
      </div>
    </div>
    <div class="battleMenu hidden">
      <p class="menuTitle create nonInteractableText">Create a Match</p>
      <hr class="menuHeader">
      <div class="createRoomBar">
        <div class="createRoomDiv">
        </div>
      </div>
      <!-- <p>Share this code to your friend!</p> -->
    </div>
    <div class="joinBattleMenu hidden">
      <p class="menuTitle nonInteractableText">Join a Match</p>
      <hr class="menuHeader">
      <p>Enter a code to join a match</p>
      <div class="joinRoomDiv"></div>
    </div>
    <div class="wordleBar2">
      <p class="menuTitle nonInteractableText">Start a Match</p>
      <hr class="menuHeader">
      <div>
        <p class="createRoom">Create</button>
        <p class="joinRoom">Join</button>
      </div>
    </div>
  </div>
  <script>
    let backgroundList = [".mainScreenBg", ".battleArenaBg", ".gachaBg", ".wordleBar2", ".battleMenu", ".joinBattleMenu", ".manageGotchusContainer"]

    for (i in backgroundList) {
      let backgroundElement = document.querySelector(backgroundList[i])
      console.log(backgroundElement)

      function reScaleWhatever() {
        const scaleWidth = window.innerWidth / 1440
        const scaleHeight = window.innerHeight / 1024
        backgroundElement.style.transform = `translateX(-50%) translateY(-50%) scale(${scaleWidth, scaleHeight})`
      }

      window.addEventListener("resize", event => {
        reScaleWhatever()
      })
      reScaleWhatever()
    }
  </script>
  <script src="/js/home.js"></script>
  <script src="/js/homepage.js"></script>

</body>

</html>