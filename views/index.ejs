<body>
  <!-- Homepage -->
  <div class="mainScreenBg">
    <div class="topNav">
      <div class="userBar">
        <div class="userProfileBg"></div>
        <div class="userName"></div>
      </div>
      <div class="gotchuCoinBar">
        <div class="gotchuCoinIcon"></div>
        <div class="gotchuCoinAmount"></div>
      </div>
      <div class="settingsButton"></div>
    </div>

    <div class="gotchuCharacter"></div>

    <div class="bottomNav">
      <div class="gotchuButton"></div>
      <div class="gachaButton"></div>
      <div class="gotchuDomeButton"></div>
    </div>
  </div>

  <!-- Gacha page -->
  <div class="gachaBg hidden">
    <div class="topNavBar">
      <div class="homeButton">
        <h1>HOME</h1>
      </div>
      <div class="gotchuCoinBar">
        <div class="gotchuCoinIcon"></div>
        <p class="gotchuCoinAmount"></p>
      </div>
    </div>
    <div class="gachaTitle"></div>
    <div class="gachaContainer">
      <div class="gachaAnimation"></div>
    </div>
    <div class="gachaRollButton"></div>
  </div>

  <!-- Lobby page -->
  <div class="gochuDome hidden">
    <div class="battleArenaBg">
      <div class="backButton battleMenuBackBtn">
        <span class="backButtonText">BACK</span>
      </div>
    </div>
    <div class="battleMenu hidden">
      <p class="menuTitle create nonInteractableText">Create a Match</p>
      <hr class="menuHeader">
      <div class="createRoomBar">
        <div class="createRoomDiv">
        </div>
      </div>
      <!-- <p>Share this code to your friend!</p> -->
    </div>
    <div class="joinBattleMenu hidden">
      <p class="menuTitle nonInteractableText">Join a Match</p>
      <hr class="menuHeader">
      <p>Enter a code to join a match</p>
      <div class="joinRoomDiv"></div>
    </div>
    <div class="wordleBar2">
      <p class="menuTitle nonInteractableText">Start a Match</p>
      <hr class="menuHeader">
      <div>
        <p class="createRoom">Create</button>
        <p class="joinRoom">Join</button>
      </div>
    </div>
  </div>
